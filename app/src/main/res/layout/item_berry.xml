<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/berry_name_title"
            android:text="@string/nome"
            android:textStyle="bold"
            android:textSize="20sp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/berry_name_content"
              android:text="@string/nome_content"
              android:textSize="15sp"
              app:layout_constraintTop_toBottomOf="@id/berry_name_title"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>